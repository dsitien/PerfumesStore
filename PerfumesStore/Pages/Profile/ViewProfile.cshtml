@page "{id:int}"
@model PerfumesStore.Pages.Profile.ViewProfileModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: turquoise;
            padding-top: 20px;
        }

        .profile-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

            .profile-container h1 {
                color: #343a40;
                margin-bottom: 20px;
                text-align: center;
            }

        .profile-details {
            margin-bottom: 20px;
        }

            .profile-details dt {
                font-weight: bold;
                color: #6c757d;
            }

            .profile-details dd {
                margin-left: 0;
                color: #495057;
            }

        .btn-edit-profile {
            display: block;
            width: 100%;
            max-width: 200px;
            margin: 0 auto;
            text-align: center;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-edit-profile:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    @await Html.PartialAsync("Partials/_HeaderPartial", Model)
    <div class="profile-container" style="margin-top: 190px; margin-bottom:100px">
        <h1>User Profile</h1>
        <div class="profile-details">
            <dl class="row">
                <dt class="col-sm-4">Full Name:</dt>
                <dd class="col-sm-8">@Model.User.FullName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.User.Email</dd>

                <dt class="col-sm-4">Phone:</dt>
                <dd class="col-sm-8">@Model.User.Phone</dd>

                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Model.User.Address</dd>
            </dl>
        </div>
        <a asp-page="/Profile/EditProfile" asp-route-id="@Model.User.UserId" class="btn btn-edit-profile">Edit Profile</a>
        <a asp-page="/Index" class="btn" style="background-color: #007bff; color: #fff; padding: 0.5rem 1rem; text-decoration: none; border-radius: 0.25rem;">Back to Home</a>

    </div ">
    @await Html.PartialAsync("Partials/_FooterPartial", Model)
</body>
</html>
