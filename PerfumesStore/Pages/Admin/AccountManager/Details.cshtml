@page
@model PerfumesStore.Pages.Admin.AccountManager.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to right, #ffecd2, #fcb69f);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff; /* Nền trắng cho container chứa chi tiết người dùng */
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 28px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    h4 {
        font-size: 24px;
        color: #007bff; /* Màu tiêu đề chi tiết */
        margin-bottom: 15px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #F08080; /* Màu nền cho tiêu đề cột */
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2; /* Màu nền cho các hàng chẵn */
    }

    tr:hover {
        background-color: #ddd; /* Hiệu ứng hover */
    }

    .btn-primary, .btn-secondary {
        display: inline-block;
        padding: 10px 20px;
        margin-right: 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff; /* Màu nền nút Edit */
        border: 1px solid #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #007bff; /* Màu nền nút Back to List */
        border: 1px solid #007bff;
    }

        .btn-secondary:hover {
            background-color: red;
            border-color: red;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>Details</h1>

<div class="container">
    <h4>User Details</h4>
    <table>
        <tr>
            <th>Field</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>Username</td>
            <td>@Html.DisplayFor(model => model.User.Username)</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.DisplayFor(model => model.User.Password)</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.DisplayFor(model => model.User.Email)</td>
        </tr>
        <tr>
            <td>Full Name</td>
            <td>@Html.DisplayFor(model => model.User.FullName)</td>
        </tr>
        <tr>
            <td>Phone</td>
            <td>@Html.DisplayFor(model => model.User.Phone)</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Html.DisplayFor(model => model.User.Address)</td>
        </tr>
        <tr>
            <td>Status</td>
            <td>@Html.DisplayFor(model => model.User.Status)</td>
        </tr>
        <tr>
            <td>Role</td>
            <td>@Html.DisplayFor(model => model.User.Role)</td>
        </tr>
    </table>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-page="./Edit" asp-route-id="@Model.User.UserId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
