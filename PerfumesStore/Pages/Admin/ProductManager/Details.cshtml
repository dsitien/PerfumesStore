@page
@model PerfumesStore.Pages.Admin.ProductManager.DetailsModel

@{
    Layout = null;
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #ffecd2, #fcb69f);
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .details-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-img-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .product-img {
            max-width: 100%;
            max-height: 200px; /* Adjust this value as needed */
            height: auto;
            border-radius: 8px;
            object-fit: contain; /* Ensure the image is not cut off */
        }

        .details-container dt {
            font-weight: bold;
            color: #555;
        }

        .details-container dd {
            margin-bottom: 15px;
        }

        .action-links a {
            display: inline-block;
            margin-right: 10px;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #009879;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .action-links a:hover {
                background-color: #007d63;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="details-container">
            <h4>Product</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Category.CategoryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Category.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Brand.BrandName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Brand.BrandName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.ProductImg)
                </dt>
                <dd class="col-sm-10 product-img-container">
                    @if (Model.Product.ProductImg != null && Model.Product.ProductImg.Length > 0)
                    {
                        string imageBase64 = Convert.ToBase64String(Model.Product.ProductImg);
                        string imageSrc = $"data:image/jpeg;base64,{imageBase64}";
                        <img src="@imageSrc" alt="Product Image" class="product-img" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Stock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Stock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Status)
                </dd>
            </dl>
        </div>

        <div class="action-links">
            <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId">Edit</a>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</body>
</html>