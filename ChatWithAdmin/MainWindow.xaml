<Window x:Class="ChatWithAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="MessageInput" Width="400" Height="30" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Send" Width="100" Height="30" VerticalAlignment="Top" Margin="420,10,0,0" Click="SendButton_Click"/>
        <ListBox x:Name="ChatListBox" Width="510" Height="250" VerticalAlignment="Top" Margin="10,50,0,0"/>
    </Grid>
</Window>
